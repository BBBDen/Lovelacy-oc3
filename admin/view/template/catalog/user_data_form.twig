{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid"> {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
            </div>
            <div class="panel-body">
                <div class="card text-center">
                    <div class="card-header">
                        Данные о подписке
                    </div>
                    <div class="card-body">
                        <div class="card-row">
                            <h5 class="card-title">Пользователь</h5>
                            <p class="card-text">{{ user_data.name }}</p>
                        </div>

                        {% if user_data.email %}
                            <div class="card-row">
                                <h5 class="card-title">Электронная почта</h5>
                                <p class="card-text">{{ user_data.email }}</p>
                            </div>
                        {% endif %}
                        {% if user_data.phone %}
                            <div class="card-row">
                                <h5 class="card-title">Номер телефона</h5>
                                <p class="card-text">{{ user_data.phone }}</p>
                            </div>
                        {% endif %}

                        {% if user_data.pay_status %}
                            <div class="card-row">
                                <h5 class="card-title">Статус подписки</h5>
                                <p class="card-text {{ user_data.status }}">{{ user_data.pay_status }}</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
                {% if user_data.data %}
                <div class="row">
                    {% for data in user_data.data %}
                        <div class="col-sm-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{ data.key }}</h5>
                                    <p class="card-text">{{ data.value }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{{ footer }}
