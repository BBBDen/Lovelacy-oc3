{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-pp-express" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a> <a href="{{ search }}" data-toggle="tooltip" title="{{ button_search }}" class="btn btn-info"><i class="fa fa-search"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
   {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error.error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-begateway" class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-vendor"><span data-toggle="tooltip" title="{{ entry_companyid_help }}">{{ entry_companyid }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="begateway_companyid" value="{{ begateway_companyid }}" placeholder="{{ entry_companyid }}" id="input-vendor" class="form-control" />
              {% if error_companyid %}
              <div class="text-danger">{{ error_companyid }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-key"><span data-toggle="tooltip" title="{{ entry_encyptionkey_help }}">{{ entry_encyptionkey }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="begateway_encryptionkey" value="{{ begateway_encryptionkey }}" placeholder="{{ entry_encyptionkey }}" id="input-key" class="form-control" />
              {% if error_encyptionkey %}
              <div class="text-danger">{{ error_encyptionkey }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-key"><span data-toggle="tooltip" title="{{ entry_domain_payment_gateway_help }}">{{ entry_domain_payment_gateway }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="begateway_domain_payment_gateway" value="{{ begateway_domain_payment_gateway }}" placeholder="{{ entry_domain_payment_gateway }}" id="input-key" class="form-control" />
              {% if error_domain_payment_gateway %}
              <div class="text-danger">{{ error_domain_payment_gateway }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-key"><span data-toggle="tooltip" title="{{ entry_domain_payment_page_help }}">{{ entry_domain_payment_page }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="begateway_domain_payment_page" value="{{ begateway_domain_payment_page }}" placeholder="{{ entry_domain_payment_page }}" id="input-key" class="form-control" />
              {% if error_domain_payment_page %}
              <div class="text-danger">{{ error_domain_payment_page }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status_completed_text }}</label>
            <div class="col-sm-10">
              <select name="begateway_completed_status_id" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %}
                  {% if order_status.order_status_id == begateway_completed_status_id %}
                <option value="<{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-failed-status">{{ entry_order_status_failed_text }}</label>
            <div class="col-sm-10">
              <select name="begateway_failed_status_id" id="input-order-failed-status" class="form-control">
                {% for order_status in order_statuses %}
                  {% if order_status.order_status_id == begateway_failed_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{order_status.name}}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{order_status.name}}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-10">
              <select name="begateway_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{ text_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                  {% if geo_zone.geo_zone_id == begateway_geo_zone_id %}
                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                {% else %}
                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="begateway_status" id="input-status" class="form-control">
                {% set enabled_selected = '' %}
                {% set disabled_selected = '' %}
                {% if begateway_status %}
                  {% set enabled_selected = 'selected' %}
                {% else %}
                  {% set disabled_selected = 'selected' %}
                {% endif %}

                <option value="1" {{ enabled_selected }} >{{ text_enabled }}</option>
                <option value="0" {{ disabled_selected }} >{{ text_disabled }}</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-test-mode">{{ entry_test_mode }}</label>
            <div class="col-sm-10">
              <select name="begateway_test_mode" id="input-test-mode" class="form-control">
                {% set enabled_selected = '' %}
                {% set disabled_selected = '' %}
                {% if begateway_test_mode %}
                  {% set enabled_selected = 'selected' %}
                {% else %}
                  {% set disabled_selected = 'selected' %}
                {% endif %}
                <option value="1" {{ enabled_selected }} >{{ text_test_mode }}</option>
                <option value="0" {{ disabled_selected }} >{{ text_live_mode }}</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="begateway_sort_order" value="{{ begateway_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
        </form>
  </div>
</div>
{{ footer }}
