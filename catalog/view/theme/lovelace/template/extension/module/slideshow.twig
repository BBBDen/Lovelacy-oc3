<section class="big-slider" id="slideshow{{ module }}">
    <div class="container">
        <div class="title title_fs56">{{ heading_title }}Ð¸</div>
        <div class="big-slider__wrapper">
            <div class="big-slider__slides flex flex_nowrap">
                {% for banner in banners %}
                    <div class="big-slider__slide">
                        <picture>
                            <source type="image/jpg" srcset="{{ banner.image }}">
                            <img src="{{ banner.image }}" alt="{{ banner.title }}" title="{{ banner.title }}" loading="lazy">
                        </picture>
                        <div class="big-slider-block">
                            <div class="big-slider__title" {{ banner.title_size }}>{{ banner.title }}</div>
                            {% if banner.link %}
                                <a class="btn big-slider__link" href="{{ banner.link }}">{{ text_more }}</a>
                            {% endif %}
                        </div>

                    </div>
                {% endfor %}
            </div>
            <div class="big-slider__btns">
                <div class="big-slider__btn left">
                    <svg width="18" height="30" viewBox="0 0 18 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd"
